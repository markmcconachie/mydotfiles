[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
	
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[alias]
	c = commit -S
	st = status
	aa = add -A
  pu = push  
  pom = push origin master 
